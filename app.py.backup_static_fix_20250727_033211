    alert = Alert.query.filter_by(is_active=True).order_by(Alert.updated_at.desc()).first()
    
    if alert:
        return jsonify({
            'success': True,
            'alert': {
                'message': alert.message,
                'background_color': alert.background_color,
                'text_color': alert.text_color
            }
        })
    else:
        return jsonify({
            'success': False,
            'alert': None
        })

